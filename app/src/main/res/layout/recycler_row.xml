<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="zikir"
            type="com.kapirti.zikirmatik.model.ZikirModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:padding="@dimen/space_10"
        android:orientation="vertical"
        android:background="@color/me_light_gray">

        <TextView
            android:id="@+id/recycler_row_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/sp_20"
            android:layout_marginBottom="@dimen/space_10"
            android:text="@{zikir.name}" />

        <TextView
            android:id="@+id/recycler_row_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:text="@{zikir.description}" />

    </LinearLayout>
</layout>